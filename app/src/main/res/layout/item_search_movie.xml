<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginTop="@dimen/small_horizontal_margin"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_movie_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_vertical_margin"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            tools:text="O Poderoso Chefinho" />

        <TextView
            android:id="@+id/item_movie_year_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_vertical_margin"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_subtitle_size"
            tools:text="2017" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_movie_poster_iv"
                android:layout_width="100dp"
                android:layout_height="160dp"
                tools:background="@color/colorAccent" />

            <TextView
                android:id="@+id/item_movie_overview_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_horizontal_margin"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_size"
                tools:text="@string/lorem_ipsum" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>